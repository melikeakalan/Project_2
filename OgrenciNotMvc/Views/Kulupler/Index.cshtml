@using OgrenciNotMvc.Models.EntityFramework
@model List<TBLKULUPLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>KULUP ID</th>
        <th>KULUP ADI</th>
        <th>KULUP KONTENJAN</th>
        <th>İŞLEMLER</th>
    </tr>
    <tbody>
        @foreach (var klp in Model)
        {
            <tr>
                <td>@klp.KULUPID</td>
                <td>@klp.KULUPAD</td>
                <td>@klp.KULUPKONTENJAN</td>
                <td>
                    @*KuluplerController ın içindeki Sil ActionResult a git silme işlemini klp.KULUPID ye göre gerçekleştir. klp.KULUPID de dışarıdan parametre olarak gönderilen int ıd değişkenim.*@
                    <a href="/Kulupler/Sil/@klp.KULUPID" class="btn btn-danger">Sil</a>
                    <a href="/Kulupler/KulupGetir/@klp.KULUPID" class="btn btn-success">Güncelle</a>
                </td>
            </tr>
        }

    </tbody>
</table>
<a href="/Kulupler/YeniKulup" class="btn btn-primary">Yeni Kulüp Kaydı</a>
